---
import { CheckCircle2, ShieldCheck, Zap, Crown } from 'lucide-react';
import { Reveal } from './Reveal';

const WHATSAPP_MONTHLY = "https://wa.me/62895612344661?text=Halo%20GoldThrusher,%20saya%20tertarik%20untuk%20menggunakan%20bot%20trading%20emas%20MT5%20(Paket%20Monthly).";
const WHATSAPP_LIFETIME = "https://wa.me/62895612344661?text=Halo%20GoldThrusher,%20saya%20tertarik%20untuk%20menggunakan%20bot%20trading%20emas%20MT5%20(Paket%20Lifetime).";

const monthlyFeatures = [
  "Lisensi 1 Akun Trading MetaTrader 5",
  "Update Algoritma Selama Berlangganan",
  "Panduan Setup & Instalasi MT5",
  "Support via Chat",
  "Akses Grup Komunitas"
];

const lifetimeFeatures = [
  "Lisensi 1 Akun Trading MetaTrader 5",
  "Update Algoritma GoldThrusher Selamanya",
  "Panduan Setup & Instalasi MT5",
  "Support Prioritas 24/7 Langsung",
  "Akses Grup Komunitas Eksklusif"
];
---

<section id="pricing" class="py-32 lg:py-64 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <Reveal className="text-center mb-24" client:visible>
      <h2 class="text-5xl lg:text-7xl font-black mb-8 uppercase tracking-tighter text-[#1A1A1A]">Penawaran <span class="text-[#D4AF37]">Eksklusif.</span></h2>
      <p class="text-gray-500 font-bold uppercase tracking-widest text-sm leading-relaxed">Pilih paket yang sesuai dengan kebutuhan trading Anda.</p>
    </Reveal>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
      <!-- Monthly Access Card -->
      <Reveal delay={200} direction="left" client:visible>
        <div class="relative h-full flex flex-col bg-white rounded-[50px] p-10 lg:p-14 smooth-hover group ring-4 ring-gray-200 hover:ring-[#D4AF37]/30 shadow-[0_40px_80px_-20px_rgba(0,0,0,0.08)] hover:scale-[1.02]">
          <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-gray-800 text-white px-8 py-4 rounded-full text-xs font-black uppercase tracking-[0.3em] shadow-lg whitespace-nowrap flex items-center gap-2">
            <Zap className="w-4 h-4" />
            MONTHLY ACCESS
          </div>
          
          <div class="text-center mb-12 mt-4">
            <h3 class="text-xs font-black mb-6 uppercase tracking-[0.5em] text-gray-500">STARTER</h3>
            <div class="flex flex-col items-center gap-2">
              <p class="text-sm font-bold text-gray-400 line-through">Rp 1.000.000</p>
              <div class="flex items-baseline gap-2">
                <span class="text-xl font-black text-gray-400">Rp</span>
                <span class="text-6xl lg:text-7xl font-black tracking-tighter text-[#1A1A1A]">800.000</span>
              </div>
              <span class="text-gray-400 text-sm font-bold uppercase tracking-widest">/bulan</span>
            </div>
          </div>

          <ul class="space-y-5 mb-14 flex-grow">
            {monthlyFeatures.map((feature) => (
              <li class="flex items-start gap-4 text-gray-600 group/item">
                <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center shrink-0 group-hover/item:bg-[#D4AF37] transition-all duration-500">
                  <CheckCircle2 className="w-3.5 h-3.5 text-gray-400 group-hover/item:text-white transition-colors" />
                </div>
                <span class="text-base font-medium leading-relaxed">{feature}</span>
              </li>
            ))}
          </ul>

          <a 
            href={WHATSAPP_MONTHLY}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-shine w-full py-6 rounded-[30px] bg-gray-800 text-white font-black text-lg uppercase tracking-[0.2em] transition-all transform active:scale-95 shadow-xl hover:bg-[#D4AF37] hover:shadow-[#D4AF37]/40 text-center block"
          >
            MULAI SEKARANG
          </a>
          
          <div class="mt-8 flex items-center justify-center gap-3 text-gray-300">
            <ShieldCheck className="w-4 h-4" />
            <span class="text-[9px] font-black uppercase tracking-[0.3em]">Secure Monthly License</span>
          </div>
        </div>
      </Reveal>

      <!-- Lifetime Access Card -->
      <Reveal delay={300} direction="right" client:visible>
        <div class="relative h-full flex flex-col bg-white rounded-[50px] p-10 lg:p-14 smooth-hover group ring-[8px] ring-[#D4AF37]/20 hover:ring-[#D4AF37]/40 shadow-[0_60px_120px_-25px_rgba(212,175,55,0.25)] hover:scale-[1.02]">
          <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-[#D4AF37] text-white px-8 py-4 rounded-full text-xs font-black uppercase tracking-[0.3em] shadow-[0_15px_30px_rgba(212,175,55,0.4)] whitespace-nowrap flex items-center gap-2">
            <Crown className="w-4 h-4" />
            LIFETIME ACCESS
          </div>

          <!-- Best Value Badge -->
          <div class="absolute -top-2 -right-2 bg-red-500 text-white px-4 py-2 rounded-full text-[10px] font-black uppercase tracking-wider shadow-lg animate-pulse">
            BEST VALUE
          </div>
          
          <div class="text-center mb-12 mt-4">
            <h3 class="text-xs font-black mb-6 uppercase tracking-[0.5em] text-[#D4AF37]">PREMIUM LICENSE</h3>
            <div class="flex flex-col items-center gap-2">
              <p class="text-sm font-bold text-gray-400 line-through">Rp 4.000.000</p>
              <div class="flex items-baseline gap-2">
                <span class="text-xl font-black text-[#D4AF37]">Rp</span>
                <span class="text-6xl lg:text-7xl font-black tracking-tighter text-[#1A1A1A]">3.000.000</span>
              </div>
              <span class="text-[#D4AF37] text-sm font-bold uppercase tracking-widest">/selamanya</span>
            </div>
          </div>

          <ul class="space-y-5 mb-14 flex-grow">
            {lifetimeFeatures.map((feature) => (
              <li class="flex items-start gap-4 text-gray-600 group/item">
                <div class="w-6 h-6 rounded-full bg-[#D4AF37]/10 flex items-center justify-center shrink-0 group-hover/item:bg-[#D4AF37] transition-all duration-500">
                  <CheckCircle2 className="w-3.5 h-3.5 text-[#D4AF37] group-hover/item:text-white transition-colors" />
                </div>
                <span class="text-base font-medium leading-relaxed">{feature}</span>
              </li>
            ))}
          </ul>

          <a 
            href={WHATSAPP_LIFETIME}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-shine w-full py-6 rounded-[30px] bg-[#1A1A1A] text-white font-black text-lg uppercase tracking-[0.2em] transition-all transform active:scale-95 shadow-2xl hover:bg-[#D4AF37] hover:shadow-[#D4AF37]/40 text-center block"
          >
            AMBIL LISENSI
          </a>
          
          <div class="mt-8 flex items-center justify-center gap-3 text-gray-300">
            <ShieldCheck className="w-4 h-4" />
            <span class="text-[9px] font-black uppercase tracking-[0.3em]">Secure Lifetime License</span>
          </div>
        </div>
      </Reveal>
    </div>
  </div>
</section>
