---
import { Zap, TrendingUp, ArrowRight } from 'lucide-react';
import { Reveal } from './Reveal';

const WHATSAPP_LINK = "https://wa.me/62895612344661?text=Halo%20GoldThrusher,%20saya%20tertarik%20untuk%20menggunakan%20bot%20trading%20emas%20MT5.";
---

<section class="relative pt-40 pb-24 lg:pt-64 lg:pb-56 overflow-hidden">
  <!-- Animated Background Orbs -->
  <div class="absolute top-20 right-[-10%] w-[500px] h-[500px] bg-[#D4AF37]/5 blur-[120px] rounded-full animate-float"></div>
  <div class="absolute bottom-20 left-[-10%] w-[400px] h-[400px] bg-[#D4AF37]/10 blur-[100px] rounded-full animate-float" style="animation-delay: -3s;"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col lg:flex-row items-center gap-20 relative z-10">
    <div class="lg:w-1/2 text-center lg:text-left">
      <Reveal direction="left" client:visible>
        <div class="inline-flex items-center gap-2 bg-[#D4AF37]/10 text-[#D4AF37] px-5 py-2.5 rounded-full text-xs font-black uppercase tracking-[0.2em] mb-8 pulse-gold-ring">
          <Zap class="w-3 h-3 fill-[#D4AF37]" /> Trading Emas Otomatis MT5
        </div>
      </Reveal>
      
      <h1 class="text-5xl lg:text-8xl font-black leading-[0.95] mb-10 tracking-tight uppercase text-[#1A1A1A]">
        <span class="mask-text"><span class="mask-text-inner">Dominasi</span></span> <br/>
        <span class="mask-text"><span class="mask-text-inner animation-delay-200">Pasar Emas</span></span> <br/>
        <span class="text-[#D4AF37] mask-text"><span class="mask-text-inner animation-delay-400">Presisi Absolut.</span></span>
      </h1>

      <Reveal delay={600} client:visible>
        <p class="text-xl text-gray-500 mb-12 max-w-xl mx-auto lg:mx-0 leading-relaxed font-bold">
          Algoritma GoldThrusher dirancang khusus untuk MetaTrader 5. Mengeksploitasi volatilitas XAUUSD secara autopilot 24/5.
        </p>
      </Reveal>

      <Reveal delay={800} direction="up" className="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start" client:visible>
        <a 
          href={WHATSAPP_LINK}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-shine bg-[#D4AF37] text-white px-12 py-5 rounded-2xl font-black text-lg hover:scale-105 active:scale-95 transition-all shadow-[0_25px_60px_-12px_rgba(212,175,55,0.5)] flex items-center justify-center gap-3 group"
        >
          Mulai Akun Real <ArrowRight class="w-5 h-5 group-hover:translate-x-2 transition-transform" />
        </a>
        <a 
          href="#results" 
          class="bg-white border-2 border-gray-100 text-gray-700 px-12 py-5 rounded-2xl font-black text-lg hover:bg-gray-50 hover:border-[#D4AF37]/30 transition-all text-center flex items-center justify-center"
        >
          Hasil Trading
        </a>
      </Reveal>
    </div>
    
    <div class="lg:w-1/2 relative group">
      <Reveal direction="zoom" delay={400} client:visible>
        <div class="relative z-10 rounded-[50px] shadow-[0_60px_100px_-20px_rgba(0,0,0,0.2)] overflow-hidden border-[15px] border-white transform animate-float transition-all duration-700 group-hover:scale-[1.02]">
          <div class="bg-[#1A1A1A] p-5 flex items-center justify-between">
            <div class="flex gap-2.5">
              <div class="w-3.5 h-3.5 rounded-full bg-[#FF5F56]"></div>
              <div class="w-3.5 h-3.5 rounded-full bg-[#FFBD2E]"></div>
              <div class="w-3.5 h-3.5 rounded-full bg-[#27C93F]"></div>
            </div>
            <div class="text-[10px] text-gray-500 font-mono tracking-[0.3em] uppercase font-bold">MT5 Terminal v4.2</div>
          </div>
          <div class="bg-white p-12">
            <div class="flex items-center justify-between mb-12">
              <div>
                <h4 class="text-xs text-gray-400 font-black uppercase tracking-[0.3em] mb-2">Daily Performance</h4>
                <p class="text-5xl font-black text-[#1A1A1A] tracking-tighter">+12.4%</p>
              </div>
              <div class="p-5 bg-[#D4AF37]/10 rounded-[25px] shadow-inner shadow-[#D4AF37]/20">
                <TrendingUp class="w-10 h-10 text-[#D4AF37]" />
              </div>
            </div>
            <div class="h-64 w-full mb-10 relative">
              <svg viewBox="0 0 400 150" class="w-full h-full drop-shadow-[0_10px_20px_rgba(212,175,55,0.4)]">
                <path d="M0,120 C50,110 80,140 120,90 C160,40 200,80 250,50 C300,20 350,60 400,20" fill="none" stroke="#D4AF37" stroke-width="8" stroke-linecap="round" stroke-dasharray="1000" stroke-dashoffset="1000" class="animate-dash" />
              </svg>
            </div>
            <div class="grid grid-cols-2 gap-6">
              <div class="bg-gray-50 p-6 rounded-[35px] border border-gray-100 shadow-sm">
                <p class="text-[10px] text-gray-400 uppercase font-black tracking-widest mb-2">Signal</p>
                <p class="text-xl font-black text-green-600">Active BUY</p>
              </div>
              <div class="bg-gray-50 p-6 rounded-[35px] border border-gray-100 shadow-sm">
                <p class="text-[10px] text-gray-400 uppercase font-black tracking-widest mb-2">Platform</p>
                <p class="text-xl font-black text-[#D4AF37]">MT5 Exclusive</p>
              </div>
            </div>
          </div>
        </div>
      </Reveal>
    </div>
  </div>
</section>
